<!DOCTYPE html>
<html>
<head>
  <title>Contact Us</title>
  <style>
    body{font-family:Arial;background:#fff3e0;display:flex;justify-content:center;padding:50px}
    form{background:white;padding:40px;border-radius:15px;box-shadow:0 5px 20px rgba(0,0,0,0.1);width:400px}
    input,textarea{width:100%;padding:12px;margin:10px 0;border:1px solid #ddd;border-radius:8px}
    button{background:#d84315;color:white;padding:15px;border:none;border-radius:8px;font-size:18px;cursor:pointer}
    .msg{margin-top:20px;font-weight:bold}
  </style>
</head>
<body>
  <form id="form">
    <h2>Contact Us</h2>
    <input type="text" id="name" placeholder="Your Name" required>
    <input type="email" id="email" placeholder="Your Email" required>
    <textarea id="msg" placeholder="Message" required></textarea>
    <button type="submit">Send Message</button>
    <p class="msg" id="status"></p>
  </form>

  <script>
    document.getElementById('form').onsubmit = function(e){
      e.preventDefault();
      let name = document.getElementById('name').value;
      let email = document.getElementById('email').value;
      if(name && email){
        document.getElementById('status').innerHTML = "Thank you " + name + "! Message sent";
        document.getElementById('status').style.color = "green";
      }
    }
  </script>
</body>
</html>
